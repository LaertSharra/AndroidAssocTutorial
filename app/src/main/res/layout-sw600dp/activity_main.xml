<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="89dp">

    <Button
            android:text="@string/toast"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_width="286dp"
            android:textSize="16sp"
            android:onClick="btnShowToast_Click"
            android:layout_height="wrap_content"
            android:id="@+id/button_toast"
            tools:layout_editor_absoluteY="4dp"/>
    <Button
            android:text="@string/button"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:id="@+id/Count"
            android:onClick="btnCountUp_Click"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white" tools:layout_editor_absoluteY="4dp"
            tools:layout_editor_absoluteX="296dp"/>
    <TextView
            android:text="@string/textview"
            android:layout_width="600dp"
            android:layout_height="263dp"
            android:id="@+id/show_count"
            tools:text="0"
            android:textSize="160sp" android:textStyle="bold" android:textAlignment="center"
            android:gravity="center_vertical" android:textColor="@android:color/holo_blue_dark"
            tools:layout_editor_absoluteY="560dp"/>
</android.support.constraint.ConstraintLayout>